---
import type { PortableTextChild } from "sanity";
const { children } = Astro.props.node;
// console.log("large text children", children);
---

{
  children.map((child: PortableTextChild) => {
    if (child._type === "@text") {
      return <span class="text-step-1">{child.text}</span>;
    }
  })
}
