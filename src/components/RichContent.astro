---
import { PortableText } from "astro-portabletext";
import RichContentTextHighlight from "./RichContent_TextHighlight.astro";
import RichContentLargeText from "./RichContent_LargeText.astro";
import RichContentLink from "./RichContent_Link.astro";
// import PortableTextImage from "./PortableTextImage.astro";
import type { PortableTextBlock } from "sanity";

type Props = {
  content?: Array<PortableTextBlock>;
};

const { content } = Astro.props;

const components = {
  // type: {
  //   // image: PortableTextImage,

  // },
  mark: {
    highlight: RichContentTextHighlight,
    largeText: RichContentLargeText,
    richContentLink: RichContentLink,
  },
};
---

{content ? <PortableText value={content} components={components} /> : ""}
